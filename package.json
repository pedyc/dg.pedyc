  "scripts": {
    "quartz": "./quartz/bootstrap-cli.mjs",
    "docs": "npx quartz build --serve -d docs",
    "server": "npx quartz build --serve -d content --port 8081 --wsPort 3000",
    "start": "npx quartz build --serve --watch",
    "build": "npm run subset-fonts && npx quartz build",
    "subset-fonts": "node quartz/scripts/subset_fonts.js",
    "check": "tsc --noEmit && npx prettier . --check --ignore-path .prettierignore",
    "format": "npx prettier . --write --ignore-path .prettierignore",
    "test": "tsx ./quartz/util/path.test.ts && tsx ./quartz/depgraph.test.ts",
    "profile": "0x -D prof ./quartz/bootstrap-cli.mjs build --concurrency=1",
    "serve": "npx quartz serve",
    "preinstall": "npm install --no-save @napi-rs/simple-git@latest @myriaddreamin/typst-ts-node-compiler@latest sharp@latest lightningcss@latest"
  },
  "engines": {
    "npm": ">=10.9.2",
    "node": ">=22"
  },
  "keywords": [
    "site generator",
    "ssg",
    "digital-garden",
    "markdown",
    "blog",
    "quartz"
  ],
